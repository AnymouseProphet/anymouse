\ifthenelse{\equal{\ampedition}{reduced}}{
  % only ever used with T1
  \RequirePackage[T1]{fontenc}
  \renewcommand{\rmdefault}{ptm}
  \renewcommand{\sfdefault}{phv}
  \renewcommand{\ttdefault}{pcr}
  \ifthenelse{\equal{\mathfonts}{yes}}{
